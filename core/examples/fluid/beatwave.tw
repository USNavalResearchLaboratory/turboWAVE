// Keep the following line for generating twtest reports
// TWTEST matplotlib zxyt=0,: phi.npy

#define $a0 0.2
#define $r0 6.0
#define $t0 40

dump period = 0
moving window = no
neutralize = yes
unit density = 1e+16

xboundary = ( periodic , periodic )
yboundary = ( periodic , periodic )
zboundary = ( absorbing , absorbing )

// wp^-1 = 177.3 fs
// c/wp = 53.14 um
// E_br = 9.616 GV/m

new grid
{
	origin = ( 0.5 , 0.5 , 0.5 , 0.0 )
	shift = ( 0.0 , 0.0 , 0.0 , 0.0 )
	dimensions = ( 1000 , 128 , 1 , 512 )
	cell size = ( 0.08 , 0.5 , 1.0 , 0.1 )
	decomposition = ( 1 , 2 , 1 , 4 )
}

new coulomb electromagnetic module 'coul'
{
}

new facr elliptic solver for 'coul'
{
	zboundary = ( open , open )
}

new pgc laser module 'pgc'
{
	carrier frequency = 31.0
}

new hermite gauss for 'pgc'
{
	a = ( $a0 , 0 , 0 )
	direction = ( 0 , 0 , 1 )
	focus position = ( 0 , 0 , 0 )
	delay = 0
	risetime = $t0
	holdtime = 0
	falltime = $t0
	w = 30.5
	r0 = ( $r0 , 1e5 )
}

new hermite gauss for 'pgc'
{
	a = ( $a0 , 0 , 0 )
	direction = ( 0 , 0 , 1 )
	focus position = ( 0 , 0 , 0 )
	delay = 0
	risetime = $t0
	holdtime = 0
	falltime = $t0
	w = 31.5
	r0 = ( $r0 , 1e5 )
}

new fluid 'e'
{
	charge = -1
	mass = 1
}

generate piecewise 'e'
{
	zpoints = { 0 10 41.2 51.2 }
	zdensity = { 0 1 1 0 }
	temperature = 1.0 [eV]
	shape = quintic
}

new box diagnostic
{
	period = 100
}

new energy diagnostic
{
	period = 100
}
