// Keep the following line for generating twtest reports
// TWTEST matplotlib zxyt=0,: beam.npy

dump period = 0
moving window = yes
neutralize = yes
unit density = 1.1e+17

xboundary = ( periodic , periodic )
yboundary = ( periodic , periodic )
zboundary = ( absorbing , absorbing )

// wp^-1 = 53.4781 fs
// c/wp = 16.0434 um
// E_br = 31.9056 GV/m

new grid
{
	origin = ( 0, 0.5, 0.5, 1.0 )
	dimensions = ( 500, 128 , 1 , 128 )
	cell size = ( 0.08, 0.25 , 1 , 0.1 )
	decomposition = ( 1, 1, 1, 1 )
}

new direct electromagnetic module 'em'
{
}

new pgc laser module 'pgc'
{
	carrier frequency = 50
}

new hermite gauss for 'pgc'
{
	a = ( 0.5 , 0.0 , 0.0 )
	r0 = ( 5 , 1e5 )
	w = 50
	risetime = 3
	holdtime = 0
	falltime = 3
	delay = 1
	focus position = ( 0 , 0 , 0 )
	direction = ( 0 , 0 , 1 )
}

new species 'beam'
{
	particles per cell = (10 1 10) when density = 1e-6
}

new fluid 'e'
{
	mass = 1
	charge = -1
}

generate piecewise 'e'
{
	zdensity = { 0 1 1 }
	zpoints = { 0.0 30.0 100000.0 }
	thermal momentum = ( 0.01 , 0.01 , 0.01 )
	shape = quintic
}

generate gaussian 'beam'
{
	density = 1e-6
	drift momentum = (0 0 10)
	position = (0 0 -6)
	size = (2 2 2)
	particle weight = fixed
}

new box diagnostic
{
	period = 50
	galilean velocity = ( 0 , 0 , 1 )
}
